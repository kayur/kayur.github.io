---
import { getCollection } from 'astro:content';
import BlogPost from '../../layouts/BlogPost.astro';

export async function getStaticPaths() {
  const posts = (await getCollection('blog'))
    .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

  return posts.map((post, i) => ({
    params: { slug: post.id.replace(/\.md$/, '') },
    props: {
      post,
      prevPost: posts[i + 1] ?? null,
      nextPost: posts[i - 1] ?? null,
    },
  }));
}

const { post, prevPost, nextPost } = Astro.props;
const { Content } = await post.render();

const prev = prevPost ? { title: prevPost.data.title, slug: prevPost.id.replace(/\.md$/, '') } : null;
const next = nextPost ? { title: nextPost.data.title, slug: nextPost.id.replace(/\.md$/, '') } : null;
---
<BlogPost frontmatter={post.data} prev={prev} next={next}>
  <Content />
</BlogPost>
